{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/music/MusicEventHandler.ts",
    "src/services/music/MusicPlayer.ts",
    "src/services/music/MusicSearchService.ts",
    "src/services/music/types.ts",
    "src/services/music/index.ts",
    "src/services/musicService.ts"
  ]
}
